<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:padding="16dp">

    <SurfaceView
        android:layout_width="640px"
        android:layout_height="480px"
        android:id="@+id/camera_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_info"
        android:textSize="20sp"
        android:layout_marginLeft="22dp"
        android:text="Camera QR Code Result"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/txt_camera_code"
        android:layout_alignBottom="@+id/txt_camera_code"
        android:layout_toRightOf="@+id/txt_camera_code"
        android:layout_toEndOf="@+id/txt_camera_code"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_default_image_result"
        android:textSize="20sp"
        android:text="Default Image QR Code Result"
        android:layout_alignBaseline="@+id/default_qr"
        android:layout_alignBottom="@+id/default_qr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/default_qr"
        android:layout_toEndOf="@+id/default_qr"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/default_qr"
        android:textSize="20sp"
        android:text="Default:"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/code_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/code_info"
        android:layout_toStartOf="@+id/code_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Place QR In Camera"
        android:id="@+id/textView"
        android:layout_above="@+id/txt_camera_code"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_camera_code"
        android:textSize="20sp"
        android:text="Camera:"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/camera_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>